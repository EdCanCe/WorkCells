<div class="primaryContainer bgContainer1">
    <h2 class="text-2xl font-semibold mb-4">
        Update Used Holidays
    </h2>

    <form
        action="/holiday/check/<%=holiday.usedHolidayID %>"
        method="POST"
    >
        <input
            type="hidden"
            name="_csrf"
            value="<%= csrfToken %>"
        />

        <div class="flex space-x-6 mb-4">
            <div class="field w-full">
                <label
                    for="usedTemplateHolidayIDFK"
                    class="block text-lg font-medium"
                >
                    Holiday Name
                </label>
                <input
                    type="text"
                    readonly
                    value="<%= holiday.title%>"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    disabled
                />
            </div>

            <div class="field w-1/2">
                <label
                    for="usedDate"
                    class="block text-lg font-medium"
                >
                    Celebration Date
                </label>
                <input
                    type="date"
                    id="usedDate"
                    name="usedDate"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    required
                    min="<%= new Date().getFullYear() %>-01-01"
                    max="<%= new Date().getFullYear() %>-12-31"
                    value="<%= holiday.usedDate.toISOString().split('T')[0] %>"
                />
            </div>
        </div>

        <div class="flex justify-end mt-4">
            <button type="submit" class="btnPrimary">Submit</button>
        </div>
    </form>
</div>
