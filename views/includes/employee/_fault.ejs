<div class="flex-1 p-6">
    <div class="p-6">
        <div class="bg-neutral-700/25 shadow-lg rounded-lg mb-6">
            <div class="p-6 flex justify-between items-center">
                <h2 class="text-2xl font-semibold">Faults</h2>
                <% if (faults.length === 0) { %>
                <p class="block text-green-600">
                    Number of faults: <%= faults.length %>
                </p>
                <% } else if(faults.length === 1) { %>
                <p class="block text-yellow-600">
                    Number of faults: <%= faults.length %>
                </p>
                <% } else if(faults.length === 2) { %>
                <p class="block text-orange-600">
                    Number of faults: <%= faults.length %>
                </p>
                <% } else { %>
                <p class="block text-red-600">
                    Number of faults: <%= faults.length %>
                </p>
                <% } %>
            </div>
            <div class="p-6">
                <div class="content has-text-centered box">
                    <table class="table w-full text-sm text-left">
                        <thead class="bg-neutral-700/50">
                            <tr>
                                <th class="px-4 py-2">Full name</th>
                                <th class="px-4 py-2">Reason</th>
                                <th class="px-4 py-2">Done date</th>
                                <th class="px-4 py-2">Evidence</th>
                            </tr>
                        </thead>
                        <% if(faults.length > 0) { %>
                        <tbody>
                            <% faults.forEach(f => { %>
                            <tr class="border-b">
                                <td class="px-4 py-2">
                                    <%= f.birthName %> <%= f.surname %>
                                </td>
                                <td class="px-4 py-2"><%= f.summary %></td>
                                <td class="px-4 py-2">
                                    <%= new
                                    Date(f.doneDate).toLocaleDateString('es-MX')
                                    %>
                                </td>
                                <td class="px-4 py-2">
                                    <% if (f.mediaLink) { %>
                                    <a
                                        target="_blank"
                                        href="<%= f.mediaLink %>"
                                        class="text-blue-500"
                                        >Check Evidence</a
                                    >
                                    <% } else { %> No evidence <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                        <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">
                                ThereÂ´s no faults
                            </td>
                        </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
