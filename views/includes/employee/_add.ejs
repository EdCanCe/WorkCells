<script src="/javascript/employeeValidator.js"></script>
<div class="primaryContainer bgContainer1">
    
    <div class="titleContainer">
        <h2 class="title text-center flex-1">Add employee</h2>
    </div>

    <form id="form" action="/employee" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
            <div class="field">
                <label for="curp" class="block text-lg font-medium">CURP</label>
                <input
                    type="text"
                    id="curp"
                    name="curp"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full uppercase"
                    placeholder="GOGE0927MNTPCE10"
                    maxlength="18"
                />
                <div id="curpFormatError" class="textDanger text-sm mt-2"></div>
            </div>

            <div class="field">
                <label for="rfc" class="block text-lg font-medium">RFC</label>
                <input
                    type="text"
                    id="rfc"
                    name="rfc"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full uppercase"
                    placeholder="GOGE0927MNQ9"
                    maxlength="13"
                />
                <div id="rfcFormatError" class="textDanger text-sm mt-2"></div>
            </div>

            <div class="field">
                <label for="birthName" class="block text-lg font-medium"
                    >Name</label
                >
                <input
                    type="text"
                    id="birthName"
                    name="birthName"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="Elena"
                    required
                />
            </div>

            <div class="field">
                <label for="surname" class="block text-lg font-medium"
                    >Surname</label
                >
                <input
                    type="text"
                    id="surname"
                    name="surname"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="González González"
                    required
                />
            </div>

            <div class="field">
                <label for="mail" class="block text-lg font-medium"
                    >Email</label
                >
                <input
                    type="email"
                    id="mail"
                    name="mail"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="eiujmidiam@nuclea.solutions"
                    required
                />
                <div id="mailFormatError" class="textDanger text-sm mt-2"></div>
            </div>
            <div class="field">
                <label for="phoneNumber" class="block text-lg font-medium"
                    >Phone Number</label
                >
                <input
                    type="tel"
                    name="phoneNumber"
                    id="phoneNumber"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="55 1234 5678"
                    maxlength="15"
                    pattern="[0-9]+"
                    required
                />
                <div
                    id="phoneNumberError"
                    class="textDanger text-sm mt-2"
                ></div>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
            <div class="field">
                <label for="zipCode" class="block text-lg font-medium"
                    >Zip Code</label
                >
                <input
                    type="text"
                    id="zipCode"
                    name="zipCode"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="61683"
                    required
                    maxlength="10"
                />
            </div>

            <div class="field">
                <label for="houseNumber" class="block text-lg font-medium"
                    >House Number</label
                >
                <input
                    type="text"
                    id="houseNumber"
                    name="houseNumber"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="869C"
                    required
                />
            </div>

            <div class="field">
                <label for="streetName" class="block text-lg font-medium"
                    >Street Name</label
                >
                <input
                    type="text"
                    id="streetName"
                    name="streetName"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="Avenida Madero"
                    required
                />
            </div>

            <div class="field">
                <label for="colony" class="block text-lg font-medium"
                    >Colony</label
                >
                <input
                    type="text"
                    id="colony"
                    name="colony"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    placeholder="Colonia La Pradera"
                    required
                />
            </div>

            <div class="field">
                <label for="countryUserIDFK" class="block text-lg font-medium"
                    >Country</label
                >
                <select
                    id="countryUserIDFK"
                    name="countryUserIDFK"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    required
                >
                    <option value="" selected disabled>Select Country</option>
                    <%employees.forEach(employee => { %>
                    <option value="<%=employee.countryID %>">
                        <%=employee.title %>
                    </option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
            <div class="field">
                <label for="workModality" class="block text-lg font-medium"
                    >Work Modality</label
                >
                <select
                    id="workModality"
                    name="workModality"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    required
                >
                    <option value="" selected disabled>Select Modality</option>
                    <option value="0">On Site</option>
                    <option value="1">Remote</option>
                    <option value="2">Hybrid</option>
                </select>
            </div>

            <div class="field">
                <label for="userRoleIDFK" class="block text-lg font-medium">
                    User Role
                </label>
                <select
                    id="userRoleIDFK"
                    name="userRoleIDFK"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    required
                >
                    <option value="" selected disabled>Select Role</option>
                    <% roles.forEach(role => { %>
                    <option value="<%= role.roleID %>">
                        <%= role.title %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="field">
                <label
                    for="prioritaryDepartmentIDFK"
                    class="block text-lg font-medium"
                >
                    Prioritary Department
                </label>
                <select
                    id="prioritaryDepartmentIDFK"
                    name="prioritaryDepartmentIDFK"
                    class="input bg-neutral-700/50 border border-neutral-600/50 p-3 rounded-md w-full"
                    required
                >
                    <option value="" selected disabled>
                        Select Prioritary Department
                    </option>
                    <% departments.forEach(department => { %>
                    <option value="<%= department.departmentID %>">
                        <%= department.departmentTitle %> - <%=
                        department.enterpriseTitle %>
                    </option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="flex justify-end mt-4">
            <button type="submit" class="btnPrimary">Submit</button>
        </div>
    </form>
</div>
