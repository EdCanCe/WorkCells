<section class="p-6">
  <% if (warning != '') { %>
  <div
    class="bg-yellow-100 text-yellow-800 border-l-4 border-yellow-500 p-4 mb-4"
  >
    <%= warning %>
  </div>
  <% } %>

  <form
    class="max-w-sm mx-auto bg-white p-6 rounded-lg shadow-md"
    action="/login"
    method="POST"
  >
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <label for="email" class="block text-lg font-medium text-gray-700"
      >Email</label
    >
    <input
      class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      type="text"
      placeholder="Groot"
      id="email"
      name="email"
      required
    />
    <br /><br />

    <label for="password" class="block text-lg font-medium text-gray-700"
      >Password</label
    >
    <input
      class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      type="password"
      id="password"
      name="password"
      required
    />
    <br /><br />

    <input
      class="w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:outline-none"
      type="submit"
      value="Entrar"
    />
  </form>
</section>
