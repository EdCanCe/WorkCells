<div class="container mx-auto p-6 max-w-2xl">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Encabezado -->
        <h2 class="text-2xl font-semibold text-center">Request Vacation</h2>

        <!-- Mensaje de información -->
        <% if (info != '') { %>
        <div class="bg-green-100 text-green-800 p-4 rounded-lg mx-6 mt-6">
            <%= info %>
        </div>
        <% } %>

        <!-- Formulario -->
        <form action="/vacation/add" method="POST" class="p-6 space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <!-- Selector de Período -->
            <div class="space-y-2">
                <label class="block text-lg font-medium text-gray-700">
                    Which period?
                </label>
                <select
                    id="periodSelect"
                    name="period"
                    class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required
                >
                    <option value="" disabled selected>Select period:</option>
                    <option value="<%= firstDate %>">
                        Current: <%= firstDate %> - <%= midDate %>
                    </option>
                    <option value="<%= midDate %>">
                        Next: <%= midDate %> - <%= lastDate %>
                    </option>
                </select>
            </div>

            <div id="hideExtra" class="hidden m-0 p-0">
                <!-- Fechas -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="block text-lg font-medium text-gray-700">
                            Start date
                        </label>
                        <input
                            id="startDateInput"
                            type="date"
                            name="startDate"
                            class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required
                        />
                    </div>

                    <div class="space-y-2">
                        <label class="block text-lg font-medium text-gray-700">
                            End date
                        </label>
                        <input
                            id="endDateInput"
                            type="date"
                            name="endDate"
                            class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required
                        />
                    </div>
                </div>

                <!-- Descripción -->
                <div class="space-y-2">
                    <label class="block text-lg font-medium text-gray-700">
                        Reason to request vacations:
                    </label>
                    <textarea
                        name="reason"
                        rows="4"
                        class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Describe el motivo de tu solicitud de vacaciones..."
                    ></textarea>
                </div>

                <!-- Botones -->
                <div class="flex flex-col sm:flex-row justify-end gap-4 pt-4">
                    <a
                        href="/vacations"
                        class="px-6 py-3 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition duration-200 text-center"
                    >
                        Cancel
                    </a>
                    <button
                        type="submit"
                        class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-200"
                    >
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/javascript/vacationPeriod.js"></script>
