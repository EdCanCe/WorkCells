<div class="content">
  <div class="card">
    <div class="card-content">
      <h2>Solicitudes de Vacaciones</h2>
    </div>
    <div class="card-content">
      <div class="content has-text-centered box">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Motivo</th>
              <th>Fecha Inicio</th>
              <th>Fecha Fin</th>
              <th>Estatus</th>
            </tr>
          </thead>
          <tbody>
            <!-- Iterar sobre las solicitudes de vacaciones -->
            <% vacations.forEach(vacation => { %>
            <tr>
              <td><%= vacation.id %></td>
              <td><%= vacation.reason %></td>
              <td><%= vacation.startDate %></td>
              <td><%= vacation.endDate %></td>
              <td>
                <a href="/approve/<%= vacation.id %>" class="button">Aprobar</a>
                <a href="/reject/<%= vacation.id %>" class="button">Rechazar</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a href="/vacation" class="button">Regresar</a>
</div>
