<div class="container mx-auto p-4">
    <h2 class="text-3xl font-semibold mb-2">All Departments</h2>
    <div
        class="bg-neutral-700/25 flex flex-col items-center justify-start py-5"
    >
        <% rows.forEach(dept => { %>
        <div
            class="w-[70%] bg-neutral-700/25 shadow-md rounded-2xl p-6 mb-4 flex"
        >
            <div class="w-4/5 pr-6 flex flex-col justify-center">
                <h2 class="text-2xl font-semibold mb-2">
                    Name: <%= dept.title %>
                </h2>
                <p class="mb-1">
                    <span class="font-medium">Status:</span>
                    <span
                        class="<%= dept.status === 1 ? 'text-green-600' : 'text-yellow-500' %>"
                    >
                        <%= dept.status === 1 ? 'Active' : 'Idle' %>
                    </span>
                </p>
                <p>
                    <span class="font-medium">Enterprise:</span> <%=
                    dept.enterprise %>
                </p>
            </div>

            <div
                class="w-1/5 flex flex-col items-end justify-center gap-2 text-center"
            >
                <a
                    href=""
                    class="block bg-blue-500 px-4 py-2 rounded-xl w-full hover:bg-blue-600 transition"
                    >Check</a
                >
                <a
                    href=""
                    class="bg-yellow-500 px-4 py-2 rounded-xl w-full hover:bg-yellow-600 transition"
                    >Modify</a
                >
            </div>
        </div>
        <% }) %>
    </div>
</div>
