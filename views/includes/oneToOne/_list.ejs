<div class="container mx-auto p-4">
    <div class="bg-neutral-700/25 shadow rounded-lg overflow-hidden">
        <div class="p-6">
            <h2 class="text-2xl font-bold mb-4">One To One</h2>
            <% if (info != '') { %>
            <div class="bg-green-100 text-green-800 p-4 rounded-lg mb-4">
                <%= info %>
            </div>
            <% } %>

            <div class="flex justify-center w-full">
                <div
                    class="shadow-md rounded-lg p-4 flex items-center relative content w-full max-w-2xl"
                >
                    <img
                        src="/icons/search.svg"
                        alt="search"
                        class="navIcon absolute w-6 h-6 text-white"
                    />
                    <input
                        id="search"
                        name="search"
                        type="text"
                        placeholder="Buscar empleado..."
                        class="w-full pl-9 p-2 bg-neutral-700/50 text-white rounded-md outline-none"
                    />
                </div>
            </div>

            <div>
                <table
                    class="min-w-full divide-y divide-neutral-200"
                    id="absences-table"
                >
                    <thead class="bg-neutral-800/50">
                        <tr>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Colab name
                            </th>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Email
                            </th>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Role
                            </th>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Meeting Date
                            </th>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Meeting Time
                            </th>
                            <th
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                            >
                                Expected time
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-neutral-800 divide-y divide-neutral-200">
                        <% for(const s of sessions) { const d = new
                        Date(s.meetingDate); const date =
                        d.toISOString().split("T")[0]; const [hh, mm] =
                        d.toISOString().split("T")[1].split(":"); const time =
                        `${hh}:${mm}`; %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= s.birthName + " " + s.surname %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= s.mail %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= s.title %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= date %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= time %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <%= s.expectedTime %>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
