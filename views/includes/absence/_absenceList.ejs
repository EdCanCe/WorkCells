<div class="p-6">
    <div class="bg-white shadow-lg rounded-lg">
      <div class="p-6">
        <h2 class="text-2xl font-semibold mb-4">Ausencias</h2>
        <% if (info != '') { %>
          <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4" role="alert">
            <%= info %>
          </div>
        <% } %>
  
        <div class="overflow-x-auto">
          <table id="absences-table" class="min-w-full table-auto border-collapse border border-gray-300">
            <thead class="bg-gray-200">
              <tr>
                <th class="border border-gray-300 px-4 py-2 text-left">Motivo</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Fecha de inicio</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Fecha final</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Total de d√≠as</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Estatus</th>
              </tr>
            </thead>
            <tbody>
              <% for(let ab of absences) { %>
                <tr class="hover:bg-gray-50">
                  <td class="border border-gray-300 px-4 py-2"><%- ab.reason %></td>
                  <td class="border border-gray-300 px-4 py-2"><%- new Date(ab.startDate).toLocaleDateString('es-MX') %></td>
                  <td class="border border-gray-300 px-4 py-2"><%- new Date(ab.endDate).toLocaleDateString('es-MX') %></td>
                  <td class="border border-gray-300 px-4 py-2 total-days" data-start-date="<%= ab.startDate %>" data-end-date="<%= ab.endDate %>"></td>
                  <td class="border border-gray-300 px-4 py-2"><%- ab.justified %></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="flex justify-center space-x-4 p-6">
        <a class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" href="/absence/approve">Solicitar</a>
        <a class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" href="/absence/add">Agregar</a>
      </div>
    </div>
  </div>