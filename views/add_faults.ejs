<%- include('includes/_header') %> <%- include('includes/_navbar') %>

<h1 class="title">Escribe los datos del colaborador y una Descripción</h1>

<form
    action="/fault"
    method="post"
    class="max-w-lg mx-auto p-6 bg-white rounded-xl shadow-md space-y-6"
    enctype="multipart/form-data"
>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <div>
        <label class="block text-gray-700 font-semibold mb-2"
            >Fecha de la falta</label
        >
        <div class="relative">
            <input
                class="w-full border border-gray-300 rounded-lg py-2 px-4 pl-10 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                type="date"
                name="doneDate"
                required
            />
            <div
                class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
            >
                <i class="fas fa-calendar-day"></i>
            </div>
        </div>
    </div>

    <div>
        <label class="block text-gray-700 font-semibold mb-2"
            >Razón de la falta</label
        >
        <div class="relative">
            <input
                class="w-full border border-gray-300 rounded-lg py-2 px-4 pl-10 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                type="text"
                name="reason"
                placeholder="Razón de la falta"
                required
            />
            <div
                class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
            >
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>
    </div>

    <div>
        <label class="block text-gray-700 font-semibold mb-2"
            >Correo del colaborador</label
        >
        <div class="relative">
            <input
                class="w-full border border-gray-300 rounded-lg py-2 px-4 pl-10 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                type="email"
                name="email"
                placeholder="Correo del colaborador"
                required
            />
            <div
                class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
            >
                <i class="fas fa-envelope"></i>
            </div>
        </div>
    </div>

    <!-- Campo para subir archivos -->
    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">
            Evidencia (opcional):
        </label>
        <input
            class="w-full md:w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            type="file"
            name="evidence"
            accept=".jpg, .png, .docx, .jpeg, .pdf"
        />
    </div>

    <div class="flex items-center justify-between">
        <button
            type="submit"
            class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300"
        >
            Enviar
        </button>
        <a
            href="/fault"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300"
        >
            Regresar
        </a>
    </div>
</form>

<%- include('includes/_footer') %>
